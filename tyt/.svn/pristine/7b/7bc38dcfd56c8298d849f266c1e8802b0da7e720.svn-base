<!DOCTYPE html>
<html>
<head>
<title>id生成器</title>
<#include "header.html" />
</head>
<body>
<div id="numbersApp" v-cloak>
	<div v-show="showList">
		<div class="grid-btn">
			<div class="form-group col-sm-2">
				<select v-model="q.searchBy" class="form-control">
					<option value="">请选择查询项</option>
					<option value="isuser">是否使用0，未使用，1使用</option>
					<option value="create_date"></option>
					<option value="modify_date"></option>
				</select>
			</div>
			<div class="form-group col-sm-2">
				<input type="text" class="form-control" v-model="q.keyword" @keyup.enter="query" placeholder="请输入查询值">
			</div>
			<a class="btn btn-default" @click="query">查询</a>
			
			<@shiroPermission role="sys:order:list,sys:order:info" >
				<a class="btn btn-primary" @click="add"><i class="fa fa-plus"></i>&nbsp;新增</a>
			</@shiroPermission>
			
			<a class="btn btn-primary" @click="update"><i class="fa fa-pencil-square-o"></i>&nbsp;修改</a>
			
			<a class="btn btn-primary" @click="del"><i class="fa fa-trash-o"></i>&nbsp;删除</a>
			
			<a class="btn btn-primary" href="${rc.contextPath}/sys/numbers/sss"><i class="fa fa-plus"></i>&nbsp;新增11</a>
		</div>
	    <table id="jqGrid"></table>
	    <div id="jqGridPager"></div>
    </div>
     
   	<div v-show="!showList" class="panel panel-default">
		<div class="panel-heading">{{title}}</div>
		<form class="form-horizontal">
			<div class="form-group">
			   	<div class="col-sm-2 control-label"></div>
			   	<div class="col-sm-10">
			      <input type="text" class="form-control" v-model="numbers.number" placeholder="number"/>
			    </div>
			</div>
			<div class="form-group">
			   	<div class="col-sm-2 control-label">是否使用0，未使用，1使用</div>
			   	<div class="col-sm-10">
			      <input type="text" class="form-control" v-model="numbers.isuser" placeholder="isuser"/>
			    </div>
			</div>
			<div class="form-group">
				<div class="col-sm-2 control-label"></div> 
				<input type="button" class="btn btn-primary" @click="saveOrUpdate" value="确定"/>
				&nbsp;&nbsp;<input type="button" class="btn btn-warning" @click="reload" value="返回"/>
			</div>
		</form>
	</div>
</div>

<script src="${rc.contextPath}/js/sys/numbers.js?_${.now?date}"></script>
</body>
</html>